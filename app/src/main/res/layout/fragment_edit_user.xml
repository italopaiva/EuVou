<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:weightSum="1">

    <TextView
        android:text="Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameLabel"/>

    <EditText
        android:id="@+id/nameField"
        android:maxLength="50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true" />

    <TextView
        android:text="Data de Nascimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/birthDateLabel"/>

    <EditText
        android:id="@+id/dateField"
        android:inputType="date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true" />

    <TextView
        android:text="E-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userMailLabel"/>

    <EditText
        android:id="@+id/mailField"
        android:maxLength="150"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true" />

    <TextView
        android:text="Confirme o e-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmUserMailLabel"/>

    <EditText
        android:id="@+id/confirmMailField"
        android:maxLength="150"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true" />

    <TextView
        android:text="Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userPasswordLabel"/>

    <EditText
        android:id="@+id/passwordField"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true" />

    <TextView
        android:text="Confirme a senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userConfirmPasswordLabel"/>

    <EditText
        android:id="@+id/confirmPasswordField"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="#00C0C3"
        android:text="Cadastrar"
        android:onClick="editUserUpdateButtonOnClick"/>

</LinearLayout>
